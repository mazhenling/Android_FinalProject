<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_profile"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_profile_height"
    android:background="?attr/colorAccent"
    android:padding="@dimen/spacing_major">

    <com.cheikh.lazywaimai.widget.PicassoImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_width"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/txt_user_name"
        style="@style/Widget.Drawer.AddAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_alignTop="@+id/img_avatar"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/spacing_micro"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?android:attr/textColorPrimaryInverse" />

    <TextView
        android:id="@+id/txt_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_phone_small"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/spacing_micro"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimaryInverse" />

</RelativeLayout>



