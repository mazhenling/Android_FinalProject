<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_minor"
    android:paddingLeft="@dimen/spacing_major"
    android:paddingRight="@dimen/spacing_minor"
    android:paddingBottom="@dimen/spacing_minor"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_name"
            style="@style/Txt.Main"
            tools:text="配送费"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/txt_price"
            style="@style/Txt.Auxiliary"
            android:layout_width="70dp"
            tools:text="￥1"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_desc"
        style="@style/Txt.AuxiliaryInfo"
        android:layout_marginTop="@dimen/spacing_minor"
        tools:text="本订单由商家进行配送"
        />

</LinearLayout>